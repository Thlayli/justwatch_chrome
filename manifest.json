{
  "manifest_version": 2,

  "name": "JustWatch Plugin",
  "description": "Adds JustWatch info on IMDb, rottentomatoes and a lot of webs with movie databases",
  "version": "1.0",
  "icons": { 
           "48": "icon.48.png",
           "200": "icon.png"
           },

  "permissions": [
    "https://api.justwatch.com/"
  ],


  "content_scripts": [
    {
      "matches": [
        "http://*.imdb.com/title/*",
        "https://www.rottentomatoes.com/m/*",
        "http://www.tv.com/shows/*",
        "http://www.sensacine.com/peliculas/*",
        "https://www.filmaffinity.com/*/film*",
        "http://cinefilica.es/peliculas/*"
      ],
      "js": ["main.js"],
      "css": [ "style.css" ]
    }
  ],
  "web_accessible_resources": ["providers/*"]
}