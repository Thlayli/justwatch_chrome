{
  "manifest_version": 2,

  "name": "JustWatch Plugin",
  "description": "Adds JustWatch info on IMDb",
  "version": "1.0",

  "permissions": [
    "https://api.justwatch.com/"
  ],

  "content_scripts": [
    {
      "matches": ["http://*.imdb.com/title/*","https://www.rottentomatoes.com/m/*","http://www.tv.com/shows/*","http://www.sensacine.com/peliculas/*"],
      "js": ["main.js"],
      "css": [ "style.css" ]
    }
  ],
  "web_accessible_resources": ["providers/*"]
}